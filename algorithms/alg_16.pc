inteiro principal () {
    texto matriz[4][4];
    inteiro i, x;
    para (i=0 ; 3 ; 1) {
        para (x=0 ; 3 ; 1) {
            escreva ("Linha: %inteiro ", i+1);
            escreva ("Coluna: %inteiro ", x+1);
            leia (" %texto", matriz[x][i]);
        }
        escreva ("\n");
    }

    escreva ("\n");
    escreva (" Mostrando so a coluna 3 \n");
    escreva ("\n");
    para (i=0 ; 3 ; 1) {
        escreva ("%texto", matriz[i][0]);
    }
}