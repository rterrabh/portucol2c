inteiro principal () {
   inteiro n, reverse = 0, temp;

   escreva ("Entre um numero para checar se e um palindromo ou nao\n");
   leia ("%inteiro",n);

   temp = n;

   enquanto ( temp != 0 ) {
      reverse = reverse * 10;
      reverse = reverse + temp%10;
      temp = temp/10;
   }

   se ( n == reverse )
	  escreva ("%inteiro e um numero palindromo.\n", n);
   senao
      escreva ("%inteiro nao e um numero palindromo.\n", n);

  retorne 0;
}